<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class persister="com.ctb.contentBridge.core.publish.hibernate.CTBEntityPersister"
        name="com.ctb.contentBridge.core.publish.hibernate.persist.ItemSetItemRecord"
        table="ITEM_SET_ITEM"
        dynamic-update="true"
        dynamic-insert="true"
    >

        <composite-id
            name="id"
            class="com.ctb.contentBridge.core.publish.hibernate.persist.ItemSetItemCompositeId"
        >
                     <key-property
                        name="itemId"
                        type="java.lang.String"
                        column="ITEM_ID"
                />

                     <key-property
                        name="itemSetId"
                        type="java.lang.Long"
                        column="ITEM_SET_ID"
                />

        </composite-id>

        <property
            name="createdBy"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="CREATED_BY"
            not-null="true"
        />

        <property
            name="createdDateTime"
            type="java.util.Date"
            update="false"
            insert="true"
            column="CREATED_DATE_TIME"
            not-null="true"
        />

        <property
            name="itemSortOrder"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="ITEM_SORT_ORDER"
            not-null="true"
        />

        <property
            name="updatedBy"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="UPDATED_BY"
            not-null="false"
        />

        <property
            name="updatedDateTime"
            type="java.util.Date"
            update="true"
            insert="true"
            column="UPDATED_DATE_TIME"
            not-null="false"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ItemSetItemRecord.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
