<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="com.ctb.persist.media.ItemMediaRecord"
        table="ITEM_MEDIA"
        dynamic-update="true"
        dynamic-insert="true"
    >

        <composite-id
            name="id"
            class="com.ctb.persist.media.ItemMediaCompositeId"
        >

                     <key-property
                        name="itemId"
                        type="java.lang.String"
                        column="ITEM_ID"
                />

                     <key-property
                        name="mediaType"
                        type="java.lang.String"
                        column="MEDIA_TYPE"
                />

        </composite-id>

        <property
            name="createdBy"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="CREATED_BY"
            not-null="false"
        />

        <property
            name="createdDateTime"
            type="java.util.Date"
            update="true"
            insert="true"
            column="CREATED_DATE_TIME"
            not-null="false"
        />

        <property
            name="mediaPath"
            type="java.lang.String"
            update="true"
            insert="true"
            column="MEDIA_PATH"
            not-null="false"
        />

        <property
            name="mimeType"
            type="java.lang.String"
            update="true"
            insert="true"
            column="MIME_TYPE"
            not-null="true"
        />

        <property
            name="updatedBy"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="UPDATED_BY"
            not-null="false"
        />

        <property
            name="updatedDateTime"
            type="java.util.Date"
            update="true"
            insert="true"
            column="UPDATED_DATE_TIME"
            not-null="false"
        />

        <property
            name="mediaClob"
            type="com.ctb.persist.usertype.CharArrayClobType"
            update="true"
            insert="true"
            column="MEDIA_CLOB"
            not-null="false"
        />

        <property
            name="mediaBlob"
            type="com.ctb.persist.usertype.ByteArrayBlobType"
            update="true"
            insert="true"
            column="MEDIA_BLOB"
            not-null="false"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ItemMediaRecord.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
